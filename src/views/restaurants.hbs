<div class="center-block">
    <div class="container p-4 center-block">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card-header">
                    <h3>Busqueda de restaurantes</h3>
                </div>
                <div class="card-body">
                    <form action="/restaurants/search" method="POST">
                        <div class="form-group p-2">
                            <input type="text" name="location" placeholder="Latitud, longitud" class="form-control">
                        </div>
                        <div class="form-group d-grid gap-2 p-2">
                            <button class="btn btn-success ">Buscar restaurantes cercanos</button>
                        </div>
                    </form>
                </div>
                <a href="/restaurants" method="POST"> Si no aparecen los resultados dar click aqui!</a>
            </div>
        </div>
    </div>

    <div class="container p-4 center-block">
        <div class="col-md-4 mx-auto">
            {{#if restaurants}}
                <div class="card-header mx-auto text-center">
                    <h2 class="card-title">Restaurantes</h2>
                </div>
            {{/if}}
            </div>
        <div class="row">
            <div class="col-md-4 mx-auto">
                {{#each restaurants}}
                <div class="center-block">
                    <div class="card-body  mx-auto">
                        <h4 class="card-title">{{name}}</h4>
                        <h6>{{vicinity}}</h6>
                    </div>
                </div>
                {{/each}}
            </div>

        </div>
    </div>

</div>
</div>